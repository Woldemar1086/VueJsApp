@import 'main'

.authContainer
	padding 0
	padding-top 7em
	.authFormContainer
		position relative
		max-width 300px
		min-width 300px
		min-height 500px
		margin-left auto
		margin-right auto
		border 3px solid
		border-color: spanishgray
		border-radius 10px 10px 0 0
		background-color: whitesmoke
		.authHeader
			position relative
			width 100%
			height 100%
			min-height 100px
			text-align center
			background-color: spanishgray
			h2
				padding 0
				margin 0
				padding-top 1.5em
			.authHeaderTabs
				width 300px
				position absolute
				bottom 0
				.signOrloginButton
					display none
				.signOrloginButton+label
					background-color: spanishgray
					padding 5px 0
					cursor pointer
					text-align center
					width 50%
					float left
				.signOrloginButton:checked+label
					background-color: whitesmoke
					border-radius 5px 5px 0 0
		.authSocButton
			max-width 100px
			max-height 40px
			border-radius 10px
		.authBtnContainer
			position absolute
			bottom 0
			width 300px
			.authBtn
				width 100%
				height 50px
				background-color spanishgray
				text-align center
				text-decoration none
				border none
				padding 0
				font-size 18px
				outline none
				&:active
					opacity 0.5		
		.authForm
			text-align center
			padding-top 1em
			.facebookBtn
				margin 10px
				width 90%
				height 40px
				border-color blue
				border-radius 5px
				background-color blue
				text-decoration none
				color: whitesmoke
				margin-left auto
				margin-right auto
			.fieldContainer
				text-align left
				margin auto
				margin-top 0.5em
				padding 0 1em
				.authFields
					width 100%
				.labelFields
					width 100%


.component-fade-enter-active, .component-fade-leave-active 
	transition opacity .1s ease
  
.component-fade-enter, .component-fade-leave-to
	opacity 0  


			
			




	
