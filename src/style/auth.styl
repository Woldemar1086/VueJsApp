@import 'main'

.authContainer
	padding 0
	padding-top 7em
	.authFormContainer
		position relative
		max-width 300px
		min-width 300px
		min-height 500px
		margin-left auto
		margin-right auto
		border 3px solid
		border-color: spanishgray
		border-radius 10px 10px 0 0
		.authHeader
			position relative
			width 100%
			height 100%
			min-height 100px
			text-align center
			background-color: spanishgray
			h2
				padding 0
				margin 0
				padding-top 1.5em
			.authHeaderTabs
				width 300px
				position absolute
				bottom 0
				.signOrloginButton
					display none
				.signOrloginButton+label
					background-color: spanishgray
					cursor pointer
					text-align center
					width 50%
					float left
				.signOrloginButton:checked+label
					background-color: whitesmoke
		.authSocButton
			max-width 100px
			max-height 40px
			border-radius 10px
		.authBtnContainer
			position absolute
			bottom 0
			width 300px
			.authBtn
				width 100%
				height 50px
				background-color spanishgray
				text-align center
				text-decoration none
				border none
				padding 0
				font-size 18px		
		.authForm
			padding-top 1em
			position relative
			width 100%
			.facebookBtn
				height 20px
				width 80%
				border-color blue
				border-radius 10px
				background-color blue
				margin 1em
				color: whitesmoke
			.fieldContainer
				margin auto
				padding 0 1em
				.authFields
					width 100%
				.labelFields
					text-align left
					width 100%


			
			




	
